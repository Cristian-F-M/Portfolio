---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Section from "@/components/Section.astro";
import Projects from "@/components/Projects.astro";
import AboutMe from "@/components/AboutMe.astro";
import Skills from "@/components/Skills.astro";
---

<Layout title="Portafolio Cristian Morales">
    <main class="mx-auto max-w-[950px]">
        <Section class="flex-row" id="Hero">
            <Hero />
        </Section>

        <Section class="flex flex-col mt-44" id="Proyectos">
            <Projects />
        </Section>
        <Section class="flex flex-col mt-44" id="Sobre-mi">
            <AboutMe />
        </Section>
        <Section class="flex flex-col mt-44 gap-2" id="Habilidades">
            <Skills />
        </Section>
    </main>
</Layout>
