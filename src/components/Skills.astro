---
import MacIcon from "@/icons/MacCog.astro";
import Badge from "@/components/Badge.astro";
import ArticleSkills from "@/components/ArticleSkills.astro";

const SKILLS = {
    frontend: ["Html", "Css", "Sass", "Tailwind", "Astro", "JavaScript"],
    backend: ["Python", "Flask", "PHP", "Laravel", "Java"],
    databases: ["MySQL", "PostgreSQL"],
    other: ["Git", "GitHub"],
}

---

<h1 class="flex items-center gap-5 text-3xl">
    <MacIcon class="size-9" /> Habilidades
</h1>

<aside class="mt-3 flex flex-col gap-5">
    <ArticleSkills title="Frontend" skills={SKILLS.frontend} />
    <ArticleSkills title="Backend" skills={SKILLS.backend} />
    <ArticleSkills title="Base de datos" skills={SKILLS.databases} />
    <ArticleSkills title="Complemento" skills={SKILLS.other} />
</aside>
