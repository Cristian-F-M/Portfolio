---
const { class: className } = Astro.props;
---

<div class="flex items-center ml-4">
    <span class="relative inline-flex overflow-hidden rounded-full p-[1px]">
        <div
            class=`inline-flex items-center justify-center w-full px-3 py-1 text-sm rounded-full cursor-pointer backdrop-blur-3xl whitespace-nowrap 
            ${className} border border-solid`
        >
            <slot />
        </div>
    </span>
</div>
